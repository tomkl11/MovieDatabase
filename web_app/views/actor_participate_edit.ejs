<!-- views/cars_edit.ejs -->
<!-- RECEIVES: oneCar [a single car object] + brands [array of brand objects] -->

<h1><%= header %></h1>

<p><a href='/participate/actors/<%= oneMovie.id_movie %>'>Back to the list</a></p>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/participate/update/<%= idParticipate %>/<%= oneMovie.id_movie %>/0' method='post'
      enctype='application/x-www-form-urlencoded'>
    <table class="table table-striped table-bordered table-hover">
        <tr>
            <td> Select Among Actors :</td>
        </tr>
        <tr>
            <td>
                <select name="actor">
                    <% for (var actor of actors) { %>
                        <option value='<%= actor.id_actor %>'
                        > <%= actor.name %></option>
                    <% } %>
                </select>
            </td>
        </tr>
        <tr>
            <td>Role:</td>
            <td>
                <select name="role">
                    <option value="main character"> main character</option>
                    <option value="secondary character">secondary character</option>
                    <option value="appearing">apearing</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan='2'><input type='submit' value='SEND'/></td>
        </tr>
    </table>
</form>
</body>
</html>