<!-- views/cars_edit.ejs -->
<!-- RECEIVES: oneCar [a single car object] + brands [array of brand objects] -->

<h1><%=header%></h1>

<p><a href='/room/list'>Back to the list</a></p>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/room/update/<%= oneRoom.id_room %>' method='post'
            enctype='application/x-www-form-urlencoded'>
<table class="table table-striped table-bordered table-hover">
    <tr><td>Name of the cinema:</td>
        <td><input type='text' name='cinema_name' value='<%= oneRoom.cinema_name %>' /></td></tr>
    <tr><td>Floor:</td>
        <td><input type='number' name='Floor' value='<%= oneRoom.Floor %>' /></td></tr>
    <tr><td>Area (in meters) :</td>
        <td><input type='number' name='area' value='<%= oneRoom.area %>' /></td></tr>
    <tr><td>Capacity :</td>
        <td><input type='number' min="0" name='capacity' value='<%= oneRoom.capacity %>' /></td></tr>
    <tr><td>Format Screen:</td>
        <td>
            <select name="format_screen">
                <option value="HD">HD</option>
                <option value="UHD">UHD</option>
                <option value="5K">5K</option>
                <option value="8K">8K</option>
            </select>
        </td></tr>
    <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>
</table>
</form>
</body>
</html>