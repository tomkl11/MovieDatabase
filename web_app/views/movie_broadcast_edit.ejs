<!-- views/cars_edit.ejs -->
<!-- RECEIVES: oneCar [a single car object] + brands [array of brand objects] -->

<h1><%= header %></h1>

<p><a href='/broadcast/rooms/<%= oneRoom.id_room %>'>Back to the list</a></p>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/broadcast/update/<%= idBroadcast%>/<%= oneRoom.id_room%>' method='post'
      enctype='application/x-www-form-urlencoded'>
    <table class="table table-striped table-bordered table-hover">
        <tr><td> Select Among Rooms :</td>
        <tr>
            <td>
                <select name="movie">
                    <% for (var movie of movies) { %>
                        <option value='<%= movie.id_movie %>'
                        > <%= movie.movie_title %></option>
                    <% } %>
                </select>
            </td>
        </tr>
        <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>
    </table>
</form>
</body>
</html>