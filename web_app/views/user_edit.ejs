<!-- views/cars_edit.ejs -->
<!-- RECEIVES: oneCar [a single car object] + brands [array of brand objects] -->

<h1>Sign Up here</h1>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/auth/signUp' method='post'
            enctype='application/x-www-form-urlencoded'>
<table class="table table-striped table-bordered table-hover">
    <tr><td>Name: </td>
        <td><input type='text' name='user_name' value='<%= OneUser.user_name%>' /></td></tr>
    <tr><td>Email:</td>
        <td><input type='text' name='email' value='<%= OneUser.email%>' /></td></tr>
    <tr><td>Role:</td>
        <td>
            <select name="user_role">
                <option value="ADMIN"> admin</option>
                <option value="USER">user</option>
            </select>
        </td></tr>
    <tr><td>Your Password:</td>
        <td><input type='text' name='password' value='<%= OneUser.password%>'/></td></tr>
    <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>
</table>
</form>
</body>
</html>