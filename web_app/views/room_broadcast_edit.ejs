<!-- views/cars_edit.ejs -->
<!-- RECEIVES: oneCar [a single car object] + brands [array of brand objects] -->

<h1><%= header %></h1>

<p><a href='/broadcast/rooms/<%= oneMovie.id_movie %>'>Back to the list</a></p>
<!-- body-parser ==> we cannot use multipart/form-data ==> no file uploads -->
<form action='/broadcast/update/<%= idBroadcast%>/<%= oneMovie.id_movie%>/0' method='post'
      enctype='application/x-www-form-urlencoded'>
    <table class="table table-striped table-bordered table-hover">
        <tr><td> Select Among Rooms :</td>
        <tr>
            <td>
                <select name="room">
                    <% for (var room of rooms) { %>
                        <option value='<%= room.id_room %>'
                        > <%= room.id_room %></option>
                    <% } %>
                </select>
            </td>
        </tr>
        <tr><td colspan='2'> <input type='submit' value='SEND' /> </td></tr>
    </table>
</form>
</body>
</html>